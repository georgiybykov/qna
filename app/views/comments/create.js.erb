$('.comment-errors').html('<%= render 'shared/errors', resource: @comment %>')

<% if @comment.persisted? %>
  $('.empty-comments-label').remove()

  var commentTemplate = '<%= j render 'comments/comment', comment: @comment %>'

  <% if @comment.commentable.is_a?(Question) %>
    $('.question-comments').append(commentTemplate)
  <% else %>
    $('.answer-comments').append(commentTemplate)
  <% end %>

  $('.new-comment #comment_body').val('')
<% end %>
