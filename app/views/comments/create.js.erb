$('.comment-errors').html('<%= j render 'shared/errors', resource: @comment %>')

<% if @comment.persisted? %>
  $('.empty-comments-label').remove()

  var commentTemplate = '<%= j render 'comments/comment', comment: @comment %>'
  var commentable = '<%= @comment.commentable_type.downcase %>'

  $('#' + commentable + '_<%= @comment.commentable_id %> .' + commentable + '-comments')
      .append(commentTemplate)

  $('.new-comment #comment_body').val('')
<% end %>
