- if question.persisted?
  tbody
    tr id="question_#{question.id}"
      td.align-middle.font-weight-bold
        = question.title
      td.align-middle
        = question.body
      td.align-middle
        = question.files.count
      td.align-middle
        = question.links.count
      td.align-middle
        = question.comments.count
      td.align-middle
        = link_to 'Show', question_path(question), class: 'btn btn-outline-primary'
      - if can?(:destroy, question)
        td.align-middle
          = link_to 'Delete question',
                  question_path(question),
                  method: :delete,
                  remote: true,
                  class: 'delete-question-link btn btn-outline-danger'
